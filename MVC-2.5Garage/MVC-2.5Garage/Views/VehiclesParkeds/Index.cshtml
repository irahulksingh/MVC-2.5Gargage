@model IEnumerable<MVC_2._5Garage.Models.VehiclesParked>
   
@{
    ViewBag.Title = "Index";
}

<h2>Parked Vehicles
    <img src="~/Images/Vehicles.jpg" height="50" /></h2>

<p>
    @Html.ActionLink("New member", "../Members/Create", null, new { @class = "btn btn-primary btn-large" })  ||
    @Html.ActionLink("Park", "Create",null,new { @class = "btn btn-primary" })
@using (Html.BeginForm())
{
    <div class="form-inline">

        Registration Number : @Html.TextBox("searchstring", null, new { @class = "form-control mx-sm-3", @placeholder = "Registration number" })

    @*Type : @Html.DropDownList("VehicleType", "All");*@

              Vehicle Type : @Html.DropDownList("SearchType",null,"All", htmlAttributes: new { @class = "form-control" })
                @*@Html.DropDownList("VehicleId", null, "Select Type", htmlAttributes: new { @class = "form-control" })*@
       
       @*Type : @Html.TextBox("SearchModel", null, new { @class = "form-control" })*@

       
            <input type="submit" value="Search" class="btn btn-info" /></div>}
    </p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.VehicleType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfWheels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckInTime)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CheckOutTime)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Member.MemberName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle.VehicleType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfWheels)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInTime)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CheckOutTime)
        </td>*@
        <td class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { id=item.ID, @class = "btn btn-primary btn-xs" }) ||
            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { id=item.ID, @class = "btn btn-info btn-xs" }) ||
            @Html.ActionLink("Un Park", "Delete", new { id = item.ID }, new { id=item.ID, @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
