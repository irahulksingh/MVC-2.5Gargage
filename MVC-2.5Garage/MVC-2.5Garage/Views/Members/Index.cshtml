@model IEnumerable<MVC_2._5Garage.Models.Members>

@{
    ViewBag.Title = "Index";
}

<h2>Registered members</h2>

<p>
    @Html.ActionLink("New member", "Create",null, new { @class = "btn btn-primary btn-large" })  ||
    @Html.ActionLink("Park", "../VehiclesParkeds/Create",null, new { @class = "btn btn-primary btn-large" }) 
    @using (Html.BeginForm())
    {
        <div class="form-inline">

             @Html.TextBox("SearchByName", null, new { @class = "form-control mx-sm-3", @placeholder = "Search By Member Name" })
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    }
</p>
<table class="table table-striped table-bordered" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MemberName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td class="text-center">
            @*@Html.ActionLink("Park", "../VehiclesParkeds/Create")*@ 
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { id=item.Id, @class = "btn btn-primary btn-xs" }) ||
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { id=item.Id, @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
